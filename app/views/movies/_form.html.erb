<h1><%= @movie.id ? 'Edit Movie' : 'Create Movie' %></h1>
<hr />
<%= form_with(model: @movie, local: true, class: 'ui form') do |f| %>
  <div class='field'>
    <%= f.label :title %>
    <%= f.text_field :title, required: true, autofocus: true, placeholder: 'Title' %>
  </div>
  <div class='field'>
    <%= f.label :duration %>
    <%= f.text_field :duration, placeholder: "Movie Length" %>
  </div>
  <div class='field'>
  <%= f.label :genre %>
  <%= f.text_field :genre, placeholder: 'Movie Genre' %>
  </div>
  <div class='field'>
  <%= f.label :description %>
  <%= f.text_field :description, required: true, autofocus: true, placeholder: 'Movie Description' %>
  </div>
  <div class='field'>
  <%= f.label :trailer %>
  <%= f.text_field :trailer %>
  </div>
  <%= f.submit nil, class: 'ui blue button inverted'%>
<% end %>
