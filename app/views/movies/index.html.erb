<h1>Movies List</h1>

<table class="ui celled table">
  <thead>
    <tr class='center aligned'><th>Title</th>
      <th>Genre</th>
      <th>Movie Length</th>
      <th>Description</th>
      <th>Trailer Link</th>
    </tr></thead>
  <tbody>
  <% @movies.each do |movie| %>
    <tr class='center aligned'>
      <td><%= movie.title %></td>
      <td><%= movie.genre %></td>
      <td><%= movie.duration %></td>
      <td><%= movie.description %></td>
      <td><%= movie.trailer %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to 'Delete Movie', @movie, method: :destroy %>
